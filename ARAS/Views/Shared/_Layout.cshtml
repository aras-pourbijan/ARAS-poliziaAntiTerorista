<!DOCTYPE html>
<html>
<head style="height:100%">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")

    @Scripts.Render("~/bundles/modernizr")


</head>
<body class=" container-fluid m-0 bg-dark" >


    <header class="p-3 text-bg-dark">
        <div class="container d-lg-flex justify-content-lg-between">
            <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
                <a href="/" class="d-flex align-items-center mb-2 mb-lg-0 text-white text-decoration-none">
                    <div class="d-flex align-items-center">
                        <img class="bi m-2" width="70" height="70" src="~/Content/imges/logo.png" />
                        <div class="ms-2 my-0 text-center">
                            <p class="h1 m-0 p-0"> A R A S</p>
                            <p>Lithuanian Police Anti-terrorist</p>
                        </div>

                    </div>
                </a>

                
            </div>
            <div class="d-flex flex-wrap justify-content-center  justify-content-end">
                <ul class="nav  col-lg-auto me-lg-auto mb-2  mb-md-0">
                    <li><a href="#" class="nav-link px-2 text-secondary">Home</a></li>
                    <li>@Html.ActionLink("Statistiche", "infoPartial", new { @class = "text-decoration-none text-dark font-weight-bold" })</li>
                    

                </ul>
            </div>
        </div>
    </header>

    <div class="row m-0 p-0">
        <div class="col-2 bg-dark p-1 d-flex justify-content-start p-2 m-0">
            <div class="accordion" id="accordionExample">
                <div class="accordion-item bg-light">
                    <h2 class="accordion-header" id="headingOne">
                        <button class="accordion-button a" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="false" aria-controls="collapseOne">
                            Verbali
                        </button>
                    </h2>
                    <div id="collapseOne" class="accordion-collapse collapse" aria-labelledby="headingOne" data-bs-parent="#accordionExample">
                        <div class="accordion-body">
                            <ul class="nav navbar-nav">
                                
                                <li>@Html.ActionLink("lista ", "listaVerbale", "verbale")</li>
                                <li>@Html.ActionLink("Aggiungi verbale", "InsertVerbale", "verbale")</li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="accordion-item bg-light">
                    <h2 class="accordion-header" id="headingTwo">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                            Anagrafica
                        </button>
                    </h2>
                    <div id="collapseTwo" class="accordion-collapse collapse" aria-labelledby="headingTwo" data-bs-parent="#accordionExample">
                        <div class="accordion-body">
                            <ul class="nav navbar-nav">
                                <li>@Html.ActionLink("Aggiungi Terorista", "Index", "Anagrafica")</li>
                                <li>@Html.ActionLink("Lista dei Teroristi", "listaanagrafica", "Anagrafica")</li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="accordion-item bg-light">
                    <h2 class="accordion-header" id="headingThree">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
                            Categorie Violazioni
                        </button>
                    </h2>
                    <div id="collapseThree" class="accordion-collapse collapse" aria-labelledby="headingThree" data-bs-parent="#accordionExample">
                        <div class="accordion-body">
                            <ul class="nav navbar-nav">
                                <li>@Html.ActionLink("Lista violazioni", "listaViolazioni", "Violazione")</li>
                                <li>@Html.ActionLink("aggiungi a lista", "AddViolazione", "Violazione")</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col container body-content bg-dark text-light m-0 p-0 me-5">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - Aras Pourbijan First MVC ASP.NET Application</p>
            </footer>
        </div>


    </div>




    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
